<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:gravity="center"
    android:background="@drawable/sakura"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout android:background="@drawable/corners_green_bg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip">
            <Button android:textSize="40.0sp"
                android:textColor="#ffffffff"
                android:layout_gravity="center"
                android:id="@+id/test"
                android:background="#ff5cb85c"
                android:layout_width="fill_parent"
                android:layout_height="150.0dip"
                android:layout_margin="10.0dip"
                android:text="テストを実施する" />
        </LinearLayout>
        <TextView android:layout_width="fill_parent" android:layout_height="80.0dip" />
        <LinearLayout android:background="@drawable/corners_orange_bg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip">
            <Button android:textSize="40.0sp"
                android:textColor="#ffffffff"
                android:layout_gravity="center"
                android:id="@+id/transfer"
                android:background="#fff0ad4e"
                android:layout_width="fill_parent"
                android:layout_height="150.0dip"
                android:layout_margin="10.0dip"
                android:text="テストデータをサー送信する" />
        </LinearLayout>
        <TextView android:layout_width="fill_parent" android:layout_height="40.0dip" />
        <TextView android:textSize="58.0sp"
            android:textColor="#ff551a8b"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="JOPTテスト実施支援システム" />
    </LinearLayout>
</RelativeLayout>